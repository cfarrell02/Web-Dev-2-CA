<table class="ui fixed striped table">
  <thead>
    <tr>
      <th class="table">League Position</th>
      <th class="table">Club Name</th>
      <th class="table">Manager</th>
      <th class="table">European League</th>
      <th class="table">Crest</th>
       <th class="table"></th>
    </tr>
  </thead>
<tbody>
    {{#each league.teams}}
    <form class = "ui stacked segment form" action="/league/{{../league.id}}/updateteam/{{id}}" method="POST">
    <tr class="fields">
      <td class="field">
        <span class="ui input">
         <input type="text" name="position" autofocus required title = "Please include a valid Title" placeholder="Title" value = "{{position}}">
        </span>
      </td>
      <td class="field">
        <span class="ui input">
          <input type="text" name="name" required title = "Please include a valid Artist" placeholder="Artist" value = "{{name}}">
        </span>
      </td>
      <td class="field">
        <span class="ui input">
          <input type="text" name="manager" autofocus required title = "Please include a valid Genre" placeholder="Genre" value = "{{manager}}">         
        </span>
      </td>
      <td class="field">
        {{europeanleague}}
      </td>
      <td>
      {{crest}}
      </td>
      <td class="center aligned">
        <button class="ui submit icon button"><i class="icon pencil alternate"></i></button>
      </td>
      <td class="center aligned">
        <a href="/league/{{../league.id}}/deleteteam/{{id}}" class="ui icon button delteam">
          <i class="icon trash"></i>
        </a>
      </td>
    </tr>
    </form> 
    {{/each}}
  </tbody>
</table>

<p>
  <span id="rating"> </span>
</p>

<button class="ui blue button" onclick="getRating()">
  Rate it! <i class="star icon"></i>
</button>

