<table class="ui fixed striped table">
  <thead>
    <tr>
      <th class="table">League Position</th>
      <th class="table">Club Name</th>
      <th class="table">Manager</th>
      <th class="table">European League</th>
      <th class="table">Crest</th>
       <th class="table"></th>
    </tr>
  </thead>
  <tbody>
    {{#each league.teams}}
      <tr>
        <td>
          {{position}}.
        
        </td>
        <td>
            {{name}}
        </td>
        <td>
          {{manager}}
        </td>
        <td>
          <img
                class="ui centered small image"
                src=" {{europeanleague}}"
              />
        </td>
        <td>
          <img
                class="ui centered small image"
                src="{{crest}}"
              />
        </td>
        <td>
          <a href="/league/{{../league.id}}/deleteteam/{{id}}" class="ui tiny red button"><i class="icon trash"></i></a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

<p>
  <span id="rating"> </span>
</p>

<button class="ui blue button" onclick="getRating()">
  Rate it! <i class="star icon"></i>
</button>

