<table class="ui fixed striped table">
  <thead>
    <tr>
      <th>Club Name</th>
      <th>League Position</th>
      <th>Manager</th>
      <th></th>
      <th> </th>
    </tr>
  </thead>
  <tbody>
    {{#each league.teams}}
      <tr>
        <td>
          {{name}}
        </td>
        <td>
          {{position}}
        </td>
        <td>
          {{manager}}
        </td>
        <td>
          <img
                class="ui small circular image"
                src="{{crest}}"
              />
        </td>
        <td>
          <a href="/league/{{../league.id}}/deleteteam/{{id}}" class="ui tiny red button">Delete Team</a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

<p>
  <span id="rating"> </span>
</p>

<button class="ui blue button" onclick="getRating()">
  Rate it! <i class="star icon"></i>
</button>