<table class="ui fixed striped table">
  <thead>
    <tr>
      <th class="table">League Position</th>
      <th class="table">Club Name</th>
      <th class="table">Manager</th>
      <th class="table">European League</th>
      <th class="table">Crest</th>
       <th class="table"></th>
    </tr>
  </thead>
<tbody>
    {{#each league.teams}}
    <form class = "ui stacked segment form" action="/league/{{../league.id}}/updateteam/{{id}}" method="POST">
    <tr class="fields">
      <td class="field">
        <span class="ui input">
         <input type="text" name="position" autofocus required title = "Please include a valid Position" placeholder="Position" value = "{{position}}">
        </span>
      </td>
      <td class="field">
        <span class="ui input">
          <input type="text" name="name" required title = "Please include a valid Name" placeholder="Name" value = "{{name}}">
        </span>
      </td>
      <td class="field">
        <span class="ui input">
          <input type="text" name="manager" autofocus required title = "Please include a valid Manager" placeholder="Manager" value = "{{manager}}">         
        </span>
      </td>
      <td class="field">
        <img
                class="ui centered small image"
                src=" {{europeanleague}}"
              />
        <span class="ui input">
      <select name="genre" id="genre" style="padding:.6em 2.5em; border:solid lightgray 1px;border-radius:5px;">
        <option value="{{genre}}" selected="selected">{{genre}}</option>
        {{{populate genre}}}       
      </select>       
    </span>
      </td>
      <td>
      <img
                class="ui centered small image"
                src="{{crest}}"
              />
      </td>
      <td class="center aligned">
        <button class="ui submit icon button"><i class="icon pencil alternate"></i></button>
        <a href="/league/{{../league.id}}/deleteteam/{{id}}" class="ui icon button delteam">
          <i class="icon trash"></i>
        </a>
      </td>
    </tr>
    </form> 
    {{/each}}
  </tbody>
</table>

<p>
  <span id="rating"> </span>
</p>

<button class="ui blue button" onclick="getRating()">
  Rate it! <i class="star icon"></i>
</button>

