 {{#each comments}}
   <div class="ui comment">
     
      <img class="ui mini circular image" src={{avatar}}>
   
    <div class="content">
      <a class="author">{{username}}</a>
      <div class="metadata">
        <span class="date">Today at 5:42PM</span>
      </div>
      <div class="text">
        {{text}}
      </div>
      <div class="actions">
        <a class="reply">Reply</a>
      </div>
    </div>
  </div>
 {{/each}}