 {{#each comment}}
   <div class="ui comment">
    <a class="avatar">
      <img src={{avatar}}>
    </a>
    <div class="content">
      <a class="author">{{username}}</a>
      <div class="metadata">
        <span class="date">Today at 5:42PM</span>
      </div>
      <div class="text">
        {{text}}
      </div>
      <div class="actions">
        <a class="reply">Reply</a>
      </div>
    </div>
  </div>
 {{/each}}